<Window x:Class="SocketServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.FontSize>20</Window.FontSize>
    <Grid>
        <Label  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
            <!--<Label.FontSize>16</Label.FontSize>-->
            <Label.Content>Socket Server Location:</Label.Content>
        </Label>
        <TextBox x:Name="ServerLocation" HorizontalAlignment="Left" Height="35" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="755">
            <TextBox.FontWeight>
                <FontWeight>bold</FontWeight>
            </TextBox.FontWeight> ws://0.0.0.0:5566
        </TextBox>
        <Button x:Name="ServerStarup" Content="Startup" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="-0.475,0.013" Height="53" Click="ServerStarup_Click"/>


    </Grid>
</Window>
